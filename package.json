{
  "name": "e2e-playwright-cucumberjs",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/edilson-rodrigues/e2e-playwright-cucumberjs.git",
  "author": "Edilson Rodrigues <edarodrigs@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^8.10.0",
    "@playwright/test": "^1.30.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "test": "npx playwright test",
    "test:debug": "playwright test --debug --project=chromium",
    "test:report": "npx playwright test && npx playwright show-report",
    "test:codegen": "npx playwright codegen --project=chromium",
    "test:cucumber": "npx cucumber-js",
    "test:cucumber-tags": "npx cucumber-js --tags @add-new-items"
  }
}
